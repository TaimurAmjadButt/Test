<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.trainoft.test"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.trainoft.test.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.trainoft.test.SecondActivity"
            android:label="@string/title_activity_second"
            android:parentActivityName="com.trainoft.test.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.trainoft.test.MainActivity" />
        </activity>
        <activity
            android:name="com.trainoft.test.CameraActivity"
            android:label="@string/title_activity_camera"
            android:parentActivityName="com.trainoft.test.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.trainoft.test.MainActivity" />
        </activity>
        <activity
            android:name="com.trainoft.test.PhotoHandler"
            android:label="@string/title_activity_photo_handler" >
        </activity>
    </application>

</manifest>
